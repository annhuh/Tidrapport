@model IEnumerable<Tidrapport.Models.TimeReportTemplate>

@{
    ViewBag.Title = "Min mall";
}

<h2>Min mall</h2>

<p>
    @Html.ActionLink("Skapa ny aktivitet", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DayOfWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Employee.SSN)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NumberOfHours)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activity.Name)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Employee.SSN)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfHours)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
