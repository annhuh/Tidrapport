@model Tidrapport.ViewModels.Week_VM

@{
    ViewBag.Title = "Skapa veckorapport";
}

<h2>Skapa veckorapport</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Week_VM</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WeekFirstDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.WeekFirstDate, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WeekFirstDate, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @*@Html.LabelFor(model => model.WeekFirstDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.YearWeek)
                @Html.ValidationMessageFor(model => model.YearWeek, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.WeekFirstDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bekräfta" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "MyTimeReports")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
